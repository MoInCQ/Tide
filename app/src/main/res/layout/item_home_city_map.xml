<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    android:layout_marginEnd="18dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="6dp"
    android:background="@color/greyText">

    <RelativeLayout
        android:id="@+id/rl_home_city_map_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/iv_home_city_map_item_cover"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:src="@drawable/img_recommend"
            android:scaleType="centerCrop" />
        
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingStart="3dp">
            
            <TextView
                android:id="@+id/tv_home_city_map_item_date_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="12"/>

            <View
                android:layout_toRightOf="@+id/tv_home_city_map_item_date_day"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="6dp"
                android:layout_height="32dp"
                android:layout_width="1dp"
                android:background="@color/white"/>
            
            <TextView
                android:id="@+id/tv_home_city_map_item_date_weekday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/tv_home_city_map_item_date_day"
                android:layout_marginStart="16dp"
                android:textColor="@color/white"
                android:paddingBottom="6dp"
                android:textSize="8sp"
                android:text="Monday"
                />

            <TextView
                android:id="@+id/tv_home_city_map_item_date_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_home_city_map_item_date_weekday"
                android:layout_toRightOf="@+id/tv_home_city_map_item_date_day"
                android:layout_marginStart="16dp"
                android:textColor="@color/white"
                android:paddingBottom="3dp"
                android:textSize="8sp"
                android:text="Feb."
                />
            
        </RelativeLayout>






        <TextView
            android:id="@+id/tv_home_city_map_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_home_city_map_item_cover"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="《戏梦巴黎》｜ 观影 + 分享" />

        <TextView
            android:id="@+id/tv_home_city_map_item_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_home_city_map_item_cover"
            android:layout_below="@id/tv_home_city_map_item_title"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="12dp"
            android:textColor="@color/subTitle"
            android:textSize="12sp"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="    该片充斥着对年轻岁月的美好追忆及对年轻人打破旧体制的勇敢与尝试的歌颂，是一部极度性感的影片，它是贝纳尔多·贝托鲁奇毫不掩饰地写给1968年巴黎的旧式情书"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>